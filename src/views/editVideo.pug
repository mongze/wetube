extends layouts/main

block content
  h4 Change Title of video
    form(method="POST")
      input(name="title", placeholder="Video Title", value=video.title, required)
      input(type="text", name="description", placeholder="Description", minlength=20, value=video.description)
      input(type="text", placeholder="hashtags, separated by comma.", name="hashtags", value=video.hashtags.join())
      input(value="Save", type="submit")    



